{% extends 'base.html.twig' %}
{% block body %}

    <div class="d-flex flex-row">
        <div class="row">
            {% for category in categories %}
                <div class="col-4">
                    <div class="card" >
                        <img class="card-img-top" src="{{ asset('images/noimg.png') }}" alt="Card image cap">
                        <div class="card-body">
                            <a class="card-title" href="{{ path('recipe_show', {'categoryId': category.id}) }}">{{ category.label }}</a>
                        </div>
                    </div>
                </div>
            {% endfor  %}
        </div>

    </div>
{% endblock %}
